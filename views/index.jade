html
  head
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-responsive.min.css')
    link(rel='stylesheet', href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
   style.
     @import url(http://fonts.googleapis.com/css?family=PT+Sans+Narrow);
     body {
     font-family: 'Time New Roman';
     background-color: rgb(0, 180, 0);
     }
     h1
      {
      font-family: 'PT Sans Narrow', serif;
      letter-spacing: 2px;
      font-size: 13em;
      color: black;
      }
      h4
      {
        color: rgba(10, 10, 10, 1);
        font-size: 1.5em;
      }
     .headerRow
      {
      padding: 0px 0px 20px 0px;
      width: 100%; 
      margin: 0px 0px 0px 0px;
      border-bottom: 1px white solid;
      max-height: 500px;
      height: 100%;
      }
      hr
      {
        width: 60%;
      }
      .linearGradient 
      {
          background: white; /* For browsers that do not support gradients */
          background: -webkit-linear-gradient(rgb(0, 191, 255), background: rgb(0, 180, 0));/* For Safari 5.1 to 6.0 */
          background: -o-linear-gradient(rgb(0, 191, 255), rgb(0, 180, 0)); /* For Opera 11.1 to 12.0 */
          background: -moz-linear-gradient(rgb(0, 191, 255), rgb(0, 180, 0)); /* For Firefox 3.6 to 15 */
          background: linear-gradient(rgb(0, 191, 255), rgb(0, 180, 0)); /* Standard syntax */
      }
      .radialGradient 
      {
          background: white; /* For browsers that do not support gradients */
          background: -webkit-radial-gradient(white, rgb(0, 180, 0)); /* Safari 5.1 to 6.0 */
          background: -o-radial-gradient(white, rgb(0, 180, 0)); /* For Opera 11.6 to 12.0 */
          background: -moz-radial-gradient(white, rgb(0, 180, 0)); /* For Firefox 3.6 to 15 */
          background: radial-gradient(white, rgb(0, 180, 0)); /* Standard syntax */
        }
      .jumbotron
        {
          margin: 20px 20px 20px 20px;
          border-radius: 20px;
          margin-top: 50px;
        }
        .buttonContainer
          {
          padding: 20px 20px 20px 20px;
          text-align: center;
          }
        .nativeButton
          {
          background: transparent;
          border: 2px white solid;
          width: 60%;
          margin-top: 50px;
          height: 100px;
          font-size: 2em;
          color: white;
          }
          .buttonInflate:hover
          {
            -webkit-transform: scale(1.05);
               -moz-transform: scale(1.05);
                -ms-transform: scale(1.05);
                 -o-transform: scale(1.05);
                    transform: scale(1.05);
          }
          .buttonInflate
          {
            -webkit-transition: all 0.1s linear;
                    transition: all 0.1s linear;
          }
          .nativeButton:hover
          {
            border: 2px purple solid;
            color: purple;
          }
          .littleBirds
          {
            width: 80%;
            margin-top: 30px;
            text-align: left;
          }
          .bigBirds
          {
            text-align: left;
          }

  body
    div.row.headerRow.linearGradient
      div.col-md-12
        div.col-md-3
          img.bigBirds(src="http://www.clipartbest.com/cliparts/Rid/g7R/Ridg7R4yT.png")
        div.col-md-6.text-center
          h1 BGbuddy
          hr
          h4 A website to make diabetes a little more fun
        div.col-md-3
          img.littleBirds(src="http://www.clipartbest.com/cliparts/Rid/g7R/Ridg7R4yT.png")


    div.row
      div.col-md-12
        div.col-md-6
          div.buttonContainer
            form#formSignIn(name="adduser",method="get",action="/newuser")
              button.btn.nativeButton.buttonInflate#btnSubmit(type="submit") Sign Up
        div.col-md-6
          div.buttonContainer
            form#formSignUp(name="adduser",method="get",action="/signIn")
              button.btn.nativeButton.buttonInflate#btnSubmit(type="submit") Sign In
