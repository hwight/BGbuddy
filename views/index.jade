html
  head
    title #{title} Sign In
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    link(rel='stylesheet', href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
    script(type="text/javascript", src="/javascripts/jquery.js")
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
    script(type="text/javascript", src="/javascripts/signUpCheck.js")
   style.
     @import url(http://fonts.googleapis.com/css?family=PT+Sans+Narrow);
     body 
     {
     font-family: 'Time New Roman';
     background-color: rgb(0, 180, 0);
     }
     h1
      {
      font-family: 'PT Sans Narrow', serif;
      letter-spacing: 2px;
      font-size: 13em;
      color: black;
      }
      h4
      {
        color: rgba(10, 10, 10, 1);
        font-size: 1.5em;
      }
     .headerRow
      {
      padding: 0px 0px 20px 0px;
      width: 100%;
      margin: 0px 0px 0px 0px;
      border-bottom: 1px white solid;
      max-height: 500px;
      height: 100%;
      }
      hr
      {
        width: 60%;
      }
      .linearGradient
      {
          background: white; /* For browsers that do not support gradients */
          background: -webkit-linear-gradient(rgb(0, 191, 255), background: rgb(0, 180, 0));/* For Safari 5.1 to 6.0 */
          background: -o-linear-gradient(rgb(0, 191, 255), rgb(0, 180, 0)); /* For Opera 11.1 to 12.0 */
          background: -moz-linear-gradient(rgb(0, 191, 255), rgb(0, 180, 0)); /* For Firefox 3.6 to 15 */
          background: linear-gradient(rgb(0, 191, 255), rgb(0, 180, 0)); /* Standard syntax */
      }
      .radialGradient
      {
          background: white; /* For browsers that do not support gradients */
          background: -webkit-radial-gradient(white, rgb(0, 180, 0)); /* Safari 5.1 to 6.0 */
          background: -o-radial-gradient(white, rgb(0, 180, 0)); /* For Opera 11.6 to 12.0 */
          background: -moz-radial-gradient(white, rgb(0, 180, 0)); /* For Firefox 3.6 to 15 */
          background: radial-gradient(white, rgb(0, 180, 0)); /* Standard syntax */
        }
      .jumbotron
        {
          margin: 20px 20px 20px 20px;
          border-radius: 20px;
          margin-top: 50px;
        }
        .buttonContainer
          {
          padding: 20px 20px 20px 20px;
          text-align: center;
          }
        .nativeButton
          {
          background: transparent;
          border: 2px white solid;
          width: 60%;
          margin-top: 50px;
          height: 100px;
          font-size: 2em;
          color: white;
          }
          .buttonInflate:hover
          {
            -webkit-transform: scale(1.05);
               -moz-transform: scale(1.05);
                -ms-transform: scale(1.05);
                 -o-transform: scale(1.05);
                    transform: scale(1.05);
          }
          .buttonInflate
          {
            -webkit-transition: all 0.1s linear;
                    transition: all 0.1s linear;
          }
          .nativeButton:hover
          {
            border: 2px purple solid;
            color: purple;
          }
          .littleBirds
          {
            width: 80%;
            margin-top: 30px;
            text-align: left;
          }
          .bigBirds
          {
            text-align: left;
          }
          .tabRight
            {
              margin-right: 20px;
            }


  body
    div.row.headerRow.linearGradient
      div.col-md-12
        div.col-md-3
          img.bigBirds(src="http://www.clipartbest.com/cliparts/Rid/g7R/Ridg7R4yT.png")
        div.col-md-6.text-center
          h1 BGbuddy
          hr
          h4 An application to make diabetes a little more fun
        div.col-md-3
          img.littleBirds(src="http://www.clipartbest.com/cliparts/Rid/g7R/Ridg7R4yT.png")
    div.row
      div.col-md-12
        div.col-md-6
          div.buttonContainer
            button.btn.nativeButton.buttonInflate(data-toggle="modal", data-target="#SignInModal")#btnSubmit Sign in
        div.col-md-6
          div.buttonContainer
            button.btn.nativeButton.buttonInflate(data-toggle="modal", data-target="#SignUpModal")#btnSubmit Sign up





  div.modal.fade(id="SignUpModal", role="dialog")
    div.modal-dialog
      div.modal-content
        div.modal-header
          button.close(type="button", data-dismiss="modal") &times;
          h2.modal-title Sign up for BGbuddy
        div.modal-body
          p(id='resetFormSignUp') #{msg}
          form(action='/adduser', method = "post")
            fieldset.form-group
              label(for="username") Username
              input.form-control.inputField(type='text', name='username', placeholder="Username", value= username)
            fieldset.form-group
              label(for="password") Password
              input.form-control.inputField(type='password', name='password', placeholder="Password")

            fieldset.form-group
              label(for="email") Email
              input.form-control.inputField(type='email',name='email', placeholder="spongebob@bikinibottom.com", value= email)

            fieldset.form-group
              label(for="firstName") First Name
              input.form-control.inputField(type='text', name='firstName', placeholder="Spongebob", value= firstName)

            fieldset.form-group
              label(for="lastName") Last Name
              input.form-control.inputField(type='text', name='lastName', placeholder="Squarepants", value= lastName)

            fieldset.form-group
              label(for="birthday") Birthday
              input.form-control.inputField(type='date', name='birthday', value= birthday)

            div.form-group
              label.tabRight(for="diabetesType") Diabetes Type
              label.radioButton
                input.radio-inline.tabRight(type="radio", name="diabetesType", value="Type 1")
                | Type 1
              span.tabRight
              label.radioButton
                input.radio-inline.tabRight(type="radio", name="diabetesType", value="Type 2")
                | Type 2

            button.btn.btn-primary.submitButton(type='submit') Submit


  div.modal.fade(id="SignInModal", role="dialog")
    div.modal-dialog
      div.modal-content
        div.modal-header
          button.close(type="button", data-dismiss="modal") &times;
          h2.modal-title Sign in to BGbuddy
        div.modal-body
          p(id='resetFormSignIn') #{msg1}
          form#formAddUser(name="signin",method="post",action="/logIn")
            fieldset.form-group
              label(for="username") Username
              input.form-control.inputField#inputUserName(type='text', name='username', placeholder="Username")
            fieldset.form-group
              label(for="password") Password
              input.form-control.inputField#inputUserBday(type='password', name='password', placeholder="Password")
            button.btn.btn-primary#btnSubmit(type="submit") Submit
